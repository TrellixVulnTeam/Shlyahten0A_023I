<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.shlyahten.oa" version="3.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Shlyahten OA</name>
    <description>
        Программа для получения пароля к общему аккаунту shlyahten.ru.
    </description>
    <author email="admin@shlyahten.ru" href="https://shlyahten.ru">
        Shlyahten Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
	<plugin name="cordova-plugin-cache-clear" source="npm" spec="~1.3.8" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="0"/>
    <preference name="LoadingDialog" value="Загрузка,Пожалуйста, подождите"/>
    <preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <icon density="mdpi" src="www/res/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/res/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/res/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="www/res/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="www/res/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
